{
    "styles": {
      "button": {
        "boxSizing": "border-box",
        "padding": "10px 20px",
        "fontSize": "16px",
        "border": "none",
        "borderRadius": "4px",
        "cursor": "pointer",
        "display": "inline-block",
        "textAlign": "center"
      },
      "textButton": {
        "fontSize": "1.1rem",
        "backgroundColor": "transparent",
        "color": "#4681f4",
        "padding": ".2rem",
        "border": "none",
        "cursor": "pointer",
        "borderRadius": ".3rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center"
      },
      "inputField": {
        "padding": "12px 8px",
        "fontSize": "14px",
        "border": "none",
        "borderRadius": "4px",
        "outline": "none",
        "width": "50%",
        "margin": ".2rem 0",
        "backgroundColor": "transparent",
        "color": "red",
        "position": "relative",
        "transition": "padding 0.2s, border-color 0.2s",
        "&::placeholder": {
          "color": "#aaa",
          "position": "absolute",
          "top": "10px",
          "left": "12px",
          "transition": "top 0.2s, font-size 0.2s",
          "pointerEvents": "none"
        },
        "&:focus": {
          "borderColor": "#4681f4"
        },
        "&:focus::placeholder, &:not(:placeholder-shown)::placeholder": {
          "top": "-10px",
          "fontSize": "12px",
          "color": "#4681f4"
        }
      }
    },
    "buttonTypes": {
      "enter": {
        "backgroundColor": "lightgreen",
        "accessLevels": ""
      },
      "delete": {
        "backgroundColor": "#55c2da",
        "accessLevels": ""
      },
      "update": {
        "backgroundColor": "#2196F3",
        "accessLevels": ""
      },
      "cancel": {
        "backgroundColor": "#FFC107",
        "accessLevels": ""
      },
      "iconButton": {
        "fontSize": "1.1rem",
        "backgroundColor": "transparent",
        "color": "#4681f4",
        "padding": ".2rem",
        "border": "none",
        "cursor": "pointer",
        "borderRadius": ".3rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "flexDirection": "column",
        "accessLevels": ""
      },
      "textButton": {
        "fontSize": "1.1rem",
        "backgroundColor": "transparent",
        "color": "#4681f4",
        "padding": ".2rem",
        "border": "none",
        "cursor": "pointer",
        "borderRadius": ".3rem",
        "display": "flex",
        "alignItems": "center",
        "justifyContent": "center",
        "accessLevels": ""
      }
    },
    "accessLevels": {
      "1": {
        "display": "none"
      },
      "2": {
        "pointerEvents": "none",
        "opacity": 0.5
      },
      "3": {}
    }
  }
  